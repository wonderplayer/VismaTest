@model UserInfoViewModel
<div class="text-center">
    <h1 class="display-4">Employee</h1>
</div>
@if(Model == null){
    <h1>Invalid user ID</h1>
} else
{
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <th scope="col">Login</th>
                <th scope="col">Phone</th>
                <th scope="col">Login attempts (10)</th>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Login</td>
                    <td>@Model.Phone</td>
                    <td>
                    @for(var i = 0; i < Model.Attempts.Count; i++)
                        {   
                            <p>@Model.Attempts[i]</p>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
